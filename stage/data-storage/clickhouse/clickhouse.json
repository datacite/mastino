[
  {
    "name": "clickhouse-stage",
    "image": "clickhouse/clickhouse-server",
    "cpu": 1024,
    "memory": 2048,
    "networkMode": "awsvpc",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8123,
        "hostPort": 8123
      },
      {
        "containerPort": 9000,
        "hostPort": 9000
      }
    ],
    "mountPoints": [
      {
        "containerPath": "/var/lib/clickhouse",
        "sourceVolume": "clickhouse-stage"
      },
      {
        "containerPath": "/etc/clickhouse-server/config.d/",
        "sourceVolume": "clickhouse-config-stage"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/clickhouse-stage",
        "awslogs-region": "eu-west-1",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "environment": [
      {
        "name": "AWS_ACCESS_KEY_ID",
        "value": "${access_key}"
      },
      {
        "name": "AWS_SECRET_ACCESS_KEY",
        "value": "${secret_key}"
      },
      {
        "name": "AWS_REGION",
        "value": "${region}"
      },
      {
        "name": "PUBLIC_KEY",
        "value": "${public_key}"
      }
    ],
    "dependsOn": [
      {
        "containerName": "clickhouse-config",
        "condition": "COMPLETE"
      }
    ]
  },
  {
    "name": "clickhouse-config",
    "image": "public.ecr.aws/docker/library/bash:alpine3.16",
    "entryPoint": [
      "bash",
      "-c",
      "mkdir -p /etc/clickhouse-server/config.d/; echo ${clickhouse_config} | base64 -d - | tee /etc/clickhouse-server/config.d/config.xml"
    ],
    "mountPoints": [
      {
        "containerPath": "/etc/clickhouse-server/config.d/",
        "sourceVolume": "clickhouse-config-stage"
      }
    ],
    "privileged": false,
    "essential": false,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/clickhouse-config-stage",
        "awslogs-region": "eu-west-1",
        "awslogs-stream-prefix": "ecs"
      }
    }
  }
]