[
  {
    "name": "clickhouse-ebs-stage",
    "image": "yandex/clickhouse-server:21.8.10.19",
    "cpu": 1024,
    "memory": 2048,
    "networkMode": "awsvpc",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8123,
        "hostPort": 8123
      },
      {
        "containerPort": 9000,
        "hostPort": 9000
      }
    ],
    "mountPoints": [
      {
          "containerPath": "/var/lib/clickhouse",
          "sourceVolume": "rexray-vol"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
         "awslogs-group" : "/ecs/clickhouse-ebs-stage",
         "awslogs-region": "eu-west-1",
         "awslogs-stream-prefix": "ecs"
      }
    },
    "environment" : [
      {
        "name": "AWS_ACCESS_KEY_ID",
        "value": "${access_key}"
      },
      {
        "name": "AWS_SECRET_ACCESS_KEY",
        "value": "${secret_key}"
      },
      {
        "name": "AWS_REGION",
        "value": "${region}"
      },
     {
        "name": "PUBLIC_KEY",
        "value": "${public_key}"
      }
    ]
  }
]
