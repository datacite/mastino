[
  {
    "name": "mds-stage",
    "image": "ghcr.io/datacite/poodle:${version}",
    "cpu": 256,
    "memory": 512,
    "networkMode": "awsvpc",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
         "awslogs-group" : "/ecs/mds-stage",
         "awslogs-region": "eu-west-1",
         "awslogs-stream-prefix": "ecs"
      }
    },
    "environment" : [
      {
        "name" : "PASSENGER_APP_ENV",
        "value" : "stage"
      },
      {
        "name" : "RAILS_ENV",
        "value" : "stage"
      },
      {
        "name" : "SITE_TITLE",
        "value" : "DataCite MDS API Stage"
      },
      {
        "name" : "LOG_LEVEL",
        "value" : "warn"
      },
      {
        "name" : "API_URL",
        "value" : "${api_url}"
      },
      {
        "name" : "MDS_URL",
        "value" : "${mds_url}"
      },
      {
        "name" : "SENTRY_DSN",
        "value" : "${sentry_dsn}"
      },
      {
        "name" : "MEMCACHE_SERVERS",
        "value" : "${memcache_servers}"
      },
      {
        "name" : "GITHUB_VERSION",
        "value" : "${version}"
      },
      {
        "name": "GITHUB_SHA",
        "value": "${sha}"
      }
    ]
  }
]