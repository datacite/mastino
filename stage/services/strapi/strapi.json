[
  {
    "name": "strapi-stage",
    "image": "strapi/strapi",
    "cpu": 512,
    "memory": 2048,
    "networkMode": "awsvpc",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 1337,
        "hostPort": 1337
      }
    ],
    "logConfiguration": { 
      "logDriver": "awslogs",
      "options": { 
         "awslogs-group" : "/ecs/strapi-stage",
         "awslogs-region": "eu-west-1",
         "awslogs-stream-prefix": "ecs"
      }
    },
    "environment" : [
      {
        "name" : "NODE_ENV",
        "value" : "production"
      },
      {
        "name" : "DATABASE_CLIENT",
        "value" : "mysql"
      },
      {
        "name" : "DATABASE_HOST",
        "value" : "${mysql_host}"
      },
      {
        "name" : "DATABASE_USERNAME",
        "value" : "${mysql_user}"
      },
      {
        "name" : "DATABASE_PASSWORD",
        "value" : "${mysql_password}"
      },
      {
        "name" : "DATABASE_NAME",
        "value" : "${mysql_database}"
      },
      {
        "name" : "PUBLIC_KEY",
        "value" : "${public_key}"
      }
    ]
  }
]
