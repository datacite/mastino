[
  {
    "name": "pidcheck-crawler-test",
    "image": "datacite/pidcheck-crawler",
    "cpu": 256,
    "memory": 512,
    "networkMode": "awsvpc",
    "essential": true,
    "hostname": "pidcheck-crawler-test",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
         "awslogs-group" : "/ecs/pidcheck-stage",
         "awslogs-region": "eu-west-1",
         "awslogs-stream-prefix": "ecs"
      }
    },
    "environment" : [
      {
        "name" : "LOG_LEVEL",
        "value" : "INFO"
      },
      {
        "name" : "REDIS_HOST",
        "value" : "${redis_host}"
      }
    ]
  }
]
