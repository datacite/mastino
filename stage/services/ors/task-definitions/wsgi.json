[
   {
      "name": "wsgi-stage",
      "image": "jackofsum/ors-wsgi:latest",
      "essential": true,
      "portMappings" : [],
      "environment": [ 
         {"name": "PROXY_URL", "value": "${proxy_url}" },
         {"name": "NEO_PASSWORD", "value":"${neo_password}"},
         {"name": "NEO_USER", "value":"${neo_user}"},
         {"name": "NEO_URL", "value":"${neo_url}"}
      ],
      "entrypoint": ["uwsgi", "--ini", "new.ini"],
      "logConfiguration": { 
        "logDriver": "awslogs",
        "options": { 
          "awslogs-group" : "/ecs/wgsi-stage",
          "awslogs-region": "eu-west-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
   },
   {
      "name": "nginx",
      "image": "jackofsum/ors-nginx",
      "essential": true,
      "portMappings" : [
         {
            "containerPort": 80,
            "hostPort": 80
         }
      ]
   }

]
