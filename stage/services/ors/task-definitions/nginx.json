[
   {
      "name": "nginx",
      "image": "jackofsum/ors-nginx:latest",
      "essential": true,
      "portMappings" : [
         {
            "containerPort": 80,
            "hostPort": 80
         }
      ],
      "environment": [ 
        {"name": "WSGI_DNS", "value":"${wsgi_dns}"},
        {"name": "WSGI_PORT", "value": "${wsgi_port}"},
        {"name": "BAGIT_DNS", "value": "${bagit_dns}"},
        {"name": "BAGIT_PORT", "value": "${bagit_port}"}
      ],
      "logConfiguration": { 
            "logDriver": "awslogs",
            "options": { 
                  "awslogs-group" : "/ecs/nginx-stage",
                  "awslogs-region": "eu-west-1",
                  "awslogs-stream-prefix": "ecs"
            }
      }
   }
]