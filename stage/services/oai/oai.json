[
  {
    "name": "oai-stage",
    "image": "datacite/viringo",
    "cpu": 512,
    "memory": 1024,
    "networkMode": "awsvpc",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
         "awslogs-group" : "/ecs/oai-stage",
         "awslogs-region": "eu-west-1",
         "awslogs-stream-prefix": "ecs"
      }
    },
    "environment" : [
      {
        "name" : "DATACITE_API_URL",
        "value" : "${api_url}"
      },
      {
        "name" : "LOG_LEVEL",
        "value" : "INFO"
      },
      {
        "name": "OAIPMH_BASE_URL",
        "value": "https://oai.test.datacite.org/oai"
      },
      {
        "name" : "SENTRY_DSN",
        "value" : "${sentry_dsn}"
      }
    ]
  }
]