[
  {
    "name": "search-stage",
    "image": "crosscite/doi-metadata-search",
    "cpu": 512,
    "memory": 1024,
    "networkMode": "awsvpc",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ],
    "logConfiguration": { 
      "logDriver": "awslogs",
      "options": { 
         "awslogs-group" : "/ecs/search-stage",
         "awslogs-region": "eu-west-1",
         "awslogs-stream-prefix": "ecs"
      }
    },
    "environment" : [
      {
        "name" : "RACK_ENV",
        "value" : "stage"
      },
      {
        "name" : "PASSENGER_APP_ENV",
        "value" : "stage"
      },
      {
        "name" : "SITE_TITLE",
        "value" : "DataCite Search Test"
      },
      {
        "name" : "JWT_PUBLIC_KEY",
        "value" : "${jwt_public_key}"
      },
      {
        "name" : "SECRET_KEY_BASE",
        "value" : "${secret_key_base}"
      },
      {
        "name" : "DATA_URL",
        "value" : "${data_url}"
      },
      {
        "name" : "API_URL",
        "value" : "${api_url}"
      },
      {
        "name" : "JWT_HOST",
        "value" : "${volpino_url}"
      },
      {
        "name" : "VOLPINO_URL",
        "value" : "${volpino_url}"
      },
      {
        "name" : "ORCID_URL",
        "value" : "${orcid_url}"
      },
      {
        "name" : "ORCID_UPDATE_UUID",
        "value" : "${orcid_update_uuid}"
      },
      {
        "name" : "ORCID_UPDATE_URL",
        "value" : "${orcid_update_url}"
      },
      {
        "name" : "ORCID_UPDATE_TOKEN",
        "value" : "${orcid_update_token}"
      },
      {
        "name" : "BUGSNAG_KEY",
        "value" : "${bugsnag_key}"
      },
      {
        "name" : "BUGSNAG_JS_KEY",
        "value" : "${bugsnag_js_key}"
      },
      {
        "name" : "CDN_URL",
        "value" : "${cdn_url}"
      },
      {
        "name" : "GABBA_COOKIE",
        "value" : "${gabba_cookie}"
      },
      {
        "name" : "GABBA_URL",
        "value" : "${gabba_url}"
      },
      {
        "name" : "MEMCACHE_SERVERS",
        "value" : "${memcache_servers}"
      },
      {
        "name" : "SERVERNAME",
        "value" : "search.stage.datacite.org"
      },
      {
        "name" : "GITHUB_VERSION",
        "value" : "${version}"
      }
    ]
  }
]
