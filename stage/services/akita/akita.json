[
  {
    "name": "akita-stage",
    "image": "datacite/akita",
    "cpu": 1024,
    "memory": 2048,
    "essential": true,
    "networkMode": "awsvpc",
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/akita-stage",
        "awslogs-region": "eu-west-1",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "environment": [
      {
        "name": "PUBLIC_KEY",
        "value": "${public_key}"
      },
      {
        "name": "PASSENGER_APP_ENV",
        "value": "production"
      },
      {
        "name": "NODE_ENV",
        "value": "production"
      },
      {
        "name": "LOG_LEVEL",
        "value": "info"
      },
      {
        "name": "SENTRY_DSN",
        "value": "${sentry_dsn}"
      },
      {
        "name": "TRACKING_ID",
        "value": "${tracking_id}"
      },
      {
        "name": "NEXT_PUBLIC_API_URL",
        "value": "${next_public_api_url}"
      },
      {
        "name": "GITHUB_VERSION",
        "value": "${version}"
      }
    ]
  }
]
