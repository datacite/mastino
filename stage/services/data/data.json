[
  {
    "name": "data-stage",
    "image": "crosscite/content-negotiation",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ],
    "networkMode": "awsvpc",
    "environment" : [
      {
        "name" : "SEARCH_URL",
        "value" : "${search_url}"
      },
      {
        "name" : "CITEPROC_URL",
        "value" : "${citeproc_url}"
      },
      {
        "name" : "BUGSNAG_KEY",
        "value" : "${bugsnag_key}"
      },
      {
        "name" : "SITE_TITLE",
        "value" : "DataCite Content Negotiation Test"
      },
      {
        "name" : "MEMCACHE_SERVERS",
        "value" : "${memcache_servers}"
      },
      {
        "name" : "LOG_LEVEL",
        "value" : "info"
      },
      {
        "name" : "PASSENGER_MAX_POOL_SIZE",
        "value" : "15"
      },
      {
        "name" : "PASSENGER_APP_ENV",
        "value" : "stage"
      },
      {
        "name" : "RAILS_ENV",
        "value" : "stage"
      },
      {
        "name" : "LIBRATO_USER",
        "value" : "${librato_email}"
      },
      {
        "name" : "LIBRATO_TOKEN",
        "value" : "${librato_token}"
      },
      {
        "name" : "LIBRATO_SUITES",
        "value" : "${librato_suites}"
      },
      {
        "name" : "GITHUB_VERSION",
        "value" : "${version}"
      }
    ]
  }
]
