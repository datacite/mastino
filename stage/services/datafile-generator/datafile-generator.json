[
    {
        "name": "datafile-generator-stage",
        "image": "ghcr.io/datacite/alopekis:${version}",
        "cpu": 16384,
        "memory": 32768,
        "essential": true,
        "networkMode": "awsvpc",
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "/ecs/datafile-generator-stage",
                "awslogs-region": "eu-west-1",
                "awslogs-stream-prefix": "ecs"
            }
        },
        "environment": [
            {
                "name": "GITHUB_VERSION",
                "value": "${version}"
            },
            {
                "name": "OPENSEARCH_HOST",
                "value": "${opensearch_host}"
            },
            {
                "name": "OPENSEARCH_PORT",
                "value": "${opensearch_port}"
            },
            {
                "name": "OPENSEARCH_INDEX",
                "value": "${opensearch_index}"
            },
            {
                "name": "OUTPUT_PATH",
                "value": "${output_path}"
            },
            {
                "name": "WORKERS",
                "value": "${workers}"
            },
            {
                "name": "DATAFILE_BUCKET",
                "value": "${datafile_bucket}"
            },
            {
                "name": "LOG_BUCKET",
                "value": "${log_bucket}"
            },
            {
                "name": "AWS_ACCESS_KEY_ID",
                "value": "${access_key}"
            },
            {
                "name": "AWS_SECRET_ACCESS_KEY",
                "value": "${secret_key}"
            },
            {
                "name": "AWS_REGION",
                "value": "${region}"
            }
        ]
    }
]
