[
  {
    "name": "usage-update",
    "image": "datacite/toccatore",
    "cpu": 256,
    "memory": 1000,
    "essential": true,
    "command": [
      "toccatore", "usage-update",
      "--push_url", "${push_url}",
      "--access_token", "${access_token}",
      "--source_token", "${source_token}"
    ],
    "logConfiguration": { 
      "logDriver": "awslogs",
      "options": { 
         "awslogs-group" : "/ecs/usage-update",
         "awslogs-region": "eu-west-1",
         "awslogs-stream-prefix": "ecs"
      }
    },
    "environment" : [
      {
        "name" : "ENVIRONMENT",
        "value" : "${environment}"
      },
      {
        "name" : "AWS_REGION",
        "value" : "${region}"
      },
      {
        "name" : "AWS_ACCESS_KEY_ID",
        "value" : "${access_key}"
      },
      {
        "name" : "SLACK_WEBHOOK_URL",
        "value" : "${slack_webhook_url}"
      },
      {
        "name" : "AWS_SECRET_ACCESS_KEY",
        "value" : "${secret_key}"
      }
    ]
  }
]
