[
  {
    "name": "events",
    "image": "ghcr.io/datacite/events:${version}",
    "cpu": 2048,
    "memory": 2048,
    "essential": true,
    "networkMode": "awsvpc",
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/events",
        "awslogs-region": "eu-west-1",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "dockerLabels": {
      "com.datadoghq.ad.instances": "[{\"host\": \"%%host%%\", \"port\": 80}]",
      "com.datadoghq.ad.check_names": "[\"events\"]",
      "com.datadoghq.ad.init_configs": "[{}]"
    },
    "environment": [
      {
        "name": "PASSENGER_APP_ENV",
        "value": "production"
      },
      {
        "name": "RAILS_ENV",
        "value": "production"
      },
      {
        "name": "LOG_LEVEL",
        "value": "info"
      },
      {
        "name": "PUBLIC_KEY",
        "value": "${public_key}"
      },
      {
        "name": "MYSQL_USER",
        "value": "${mysql_user}"
      },
      {
        "name": "MYSQL_PASSWORD",
        "value": "${mysql_password}"
      },
      {
        "name": "MYSQL_HOST",
        "value": "${mysql_host}"
      },
      {
        "name": "MYSQL_DATABASE",
        "value": "${mysql_database}"
      },
      {
        "name": "SENTRY_DSN",
        "value": "${sentry_dsn}"
      },
      {
        "name": "AWS_ACCESS_KEY_ID",
        "value": "${access_key}"
      },
      {
        "name": "AWS_SECRET_ACCESS_KEY",
        "value": "${secret_key}"
      },
      {
        "name": "AWS_REGION",
        "value": "${region}"
      },
      {
        "name": "ES_HOST",
        "value": "${es_host}"
      },
      {
        "name": "ES_NAME",
        "value": "${es_name}"
      },
      {
        "name": "GITHUB_VERSION",
        "value": "${version}"
      },
      {
        "name": "GITHUB_SHA",
        "value": "${sha}"
      },
      {
        "name": "SQS_PREFIX",
        "value": "production"
      }
    ]
  }
]
