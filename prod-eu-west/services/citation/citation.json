[
  {
    "name": "citation",
    "image": "crosscite/citeproc-doi-server:${version}",
    "cpu": 512,
    "memory": 2048,
    "networkMode": "awsvpc",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ],
    "logConfiguration": { 
      "logDriver": "awslogs",
      "options": { 
         "awslogs-group" : "/ecs/citation",
         "awslogs-region": "eu-west-1",
         "awslogs-stream-prefix": "ecs"
      }
    },
    "environment" : [
      {
        "name" : "PASSENGER_APP_ENV",
        "value" : "production"
      },
      {
        "name" : "SITE_GA",
        "value" : "UA-22806196-10"
      },
            {
        "name" : "SERVER_NAME",
        "value" : "citation.crosscite.org"
      }
    ]
  }
]