[
  {
    "name": "metrics-api",
    "image": "datacite/sashimi:${version}",
    "cpu": 256,
    "memory": 1024,
    "essential": true,
    "networkMode": "awsvpc",
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80

      }
    ],    
    "logConfiguration": { 
      "logDriver": "awslogs",
      "options": { 
         "awslogs-group" : "/ecs/metrics-api",
         "awslogs-region": "eu-west-1",
         "awslogs-stream-prefix": "ecs"
      }
    },
    "environment" : [
      {
        "name" : "PASSENGER_APP_ENV",
        "value" : "production"
      },
      {
        "name" : "RAILS_ENV",
        "value" : "production"
      },
      {
        "name" : "SITE_TITLE",
        "value" : "DLM API"
      },
      {
        "name" : "LOG_LEVEL",
        "value" : "info"
      },
      {
        "name" : "JWT_PUBLIC_KEY",
        "value" : "${jwt_public_key}"
      },
      {
        "name" : "JWT_PRIVATE_KEY",
        "value" : "${jwt_private_key}"
      },
      {
        "name" : "MYSQL_USER",
        "value" : "${mysql_user}"
      },
      {
        "name" : "MYSQL_PASSWORD",
        "value" : "${mysql_password}"
      },
      {
        "name" : "MYSQL_HOST",
        "value" : "${mysql_host}"
      },
      {
        "name" : "MYSQL_DATABASE",
        "value" : "${mysql_database}"
      },
      {
        "name" : "CONCURRENCY",
        "value" : "25"
      },
      {
        "name" : "MEMCACHE_SERVERS",
        "value" : "${memcache_servers}"
      },
      {
        "name" : "AWS_REGION",
        "value" : "${region}"
      },
      {
        "name" : "AWS_ACCESS_KEY_ID",
        "value" : "${access_key}"
      },
            {
        "name" : "AWS_SECRET_ACCESS_KEY",
        "value" : "${secret_key}"
      },
      {
        "name" : "AWS_S3_BUCKET",
        "value" : "${s3_bucket}"
      },
      {
        "name" : "USAGE_URL",
        "value" : "${usage_url}"
      },
      {
        "name" : "SENTRY_DSN",
        "value" : "${sentry_dsn}"
      },
      {
        "name" : "PUBLIC_KEY",
        "value" : "${public_key}"
      },
      {
        "name" : "RACK_TIMEOUT_SERVICE_TIMEOUT",
        "value" : "${rack_timeout_service_timeout}"
      },
      {
        "name" : "GITHUB_VERSION",
        "value" : "${version}"
      }
    ]
  }
]
