[
  {
    "name": "federation",
    "image": "datacite/vaestgoetaspets:${version}",
    "cpu": 1024,
    "memory": 2048,
    "essential": true,
    "networkMode": "awsvpc",
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ],
    "logConfiguration": { 
      "logDriver": "awslogs",
      "options": { 
         "awslogs-group" : "/ecs/federation",
         "awslogs-region": "eu-west-1",
         "awslogs-stream-prefix": "ecs"
      }
    },
    "environment" : [
      {
        "name" : "PASSENGER_APP_ENV",
        "value" : "production"
      },
      {
        "name" : "LOG_LEVEL",
        "value" : "warn"
      },
      {
        "name" : "SENTRY_DSN",
        "value" : "${sentry_dsn}"
      },
      {
        "name" : "PROFILES_URL",
        "value" : "${profiles_url}"
      },
      {
        "name" : "CLIENT_API_URL",
        "value" : "${client_api_url}"
      },
      {
        "name" : "API_URL",
        "value" : "${api_url}"
      },
      {
        "name" : "APOLLO_API_KEY",
        "value" : "${apollo_api_key}"
      }
    ]
  }
]
