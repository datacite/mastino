[
  {
    "name": "eventdata",
    "image": "datacite/lagottino:${version}",
    "cpu": 1024,
    "memory": 2048,
    "essential": true,
    "networkMode": "awsvpc",
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ],
    "logConfiguration": { 
      "logDriver": "awslogs",
      "options": { 
         "awslogs-group" : "/ecs/eventdata",
         "awslogs-region": "eu-west-1",
         "awslogs-stream-prefix": "ecs"
      }
    },
    "environment" : [
      {
        "name" : "PASSENGER_APP_ENV",
        "value" : "production"
      },
      {
        "name" : "RAILS_ENV",
        "value" : "production"
      },
      {
        "name" : "SITE_TITLE",
        "value" : "DataCite Event Data"
      },
      {
        "name" : "LOG_LEVEL",
        "value" : "info"
      },
      {
        "name" : "PUBLIC_KEY",
        "value" : "${public_key}"
      },
      {
        "name" : "JWT_PUBLIC_KEY",
        "value" : "${jwt_public_key}"
      },
      {
        "name" : "JWT_PRIVATE_KEY",
        "value" : "${jwt_private_key}"
      },
      {
        "name" : "MYSQL_USER",
        "value" : "${mysql_user}"
      },
      {
        "name" : "MYSQL_PASSWORD",
        "value" : "${mysql_password}"
      },
      {
        "name" : "MYSQL_HOST",
        "value" : "${mysql_host}"
      },
      {
        "name" : "MYSQL_DATABASE",
        "value" : "${mysql_database}"
      },
      {
        "name" : "ES_HOST",
        "value" : "${es_host}"
      },
      {
        "name" : "ES_NAME",
        "value" : "${es_name}"
      },
      {
        "name" : "BUGSNAG_KEY",
        "value" : "${bugsnag_key}"
      },
      {
        "name" : "SERVERNAME",
        "value" : "eventdata.datacite.org"
      },
      {
        "name" : "MEMCACHE_SERVERS",
        "value" : "${memcache_servers}"
      },
      {
        "name" : "AWS_ACCESS_KEY_ID",
        "value" : "${access_key}"
      },
            {
        "name" : "AWS_SECRET_ACCESS_KEY",
        "value" : "${secret_key}"
      },
      {
        "name" : "AWS_REGION",
        "value" : "${region}"
      },
      {
        "name" : "AWS_S3_BUCKET",
        "value" : "${s3_bucket}"
      },
      {
        "name" : "MAILGUN_API_KEY",
        "value" : "${mailgun_api_key}"
      },
      {
        "name" : "SLACK_WEBHOOK_URL",
        "value" : "${slack_webhook_url}"
      },
      {
        "name" : "GITHUB_VERSION",
        "value" : "${version}"
      }
    ]
  }
]
