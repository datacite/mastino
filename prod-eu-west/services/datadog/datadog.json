[
  {
    "name": "datadog-agent",
    "image": "datadog/agent:latest",
    "cpu": 256,
    "memory": 512,
    "networkMode": "awsvpc",
    "essential": true,
    "portMappings": [
      {
        "protocol": "tcp",
        "containerPort": 8126
      }
    ],
    "logConfiguration": { 
      "logDriver": "awslogs",
      "options": { 
         "awslogs-group" : "/ecs/datadog",
         "awslogs-region": "eu-west-1",
         "awslogs-stream-prefix": "ecs"
      }
    },
    "environment" : [
      {
        "name": "DD_API_KEY",
        "value": "${dd_api_key}"
      },
      {
        "name": "DD_APM_ENABLED",
        "value": true
      },
      {
        "name": "ECS_FARGATE",
        "value": "true"
      }
      
    ]
  }
]
