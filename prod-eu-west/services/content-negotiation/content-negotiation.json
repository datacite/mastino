[
  {
    "name": "content-negotiation",
    "image": "crosscite/content-negotiation:${version}",
    "cpu": 512,
    "memory": 2048,
    "networkMode": "awsvpc",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      }
    ],
    "logConfiguration": { 
      "logDriver": "awslogs",
      "options": { 
         "awslogs-group" : "/ecs/content-negotiation",
         "awslogs-region": "eu-west-1",
         "awslogs-stream-prefix": "ecs"
      }
    },
    "environment" : [
      {
        "name" : "SENTRY_DSN",
        "value" : "${sentry_dsn}"
      },
      {
        "name" : "SITE_TITLE",
        "value" : "Crosscite Content Negotiation"
      },
      {
        "name" : "MEMCACHE_SERVERS",
        "value" : "${memcache_servers}"
      },
      {
        "name" : "LOG_LEVEL",
        "value" : "info"
      },
      {
        "name" : "PASSENGER_MAX_POOL_SIZE",
        "value" : "15"
      },
      {
        "name" : "PASSENGER_APP_ENV",
        "value" : "production"
      },
      {
        "name" : "RAILS_ENV",
        "value" : "production"
      }
    ]
  }
]