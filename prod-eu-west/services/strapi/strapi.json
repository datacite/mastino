[
  {
    "name": "strapi",
    "image": "ghcr.io/datacite/strapi:${version}",
    "cpu": 512,
    "memory": 2048,
    "networkMode": "awsvpc",
    "essential": true,
    "mountPoints": [
      {
        "containerPath": "/srv/app",
        "sourceVolume": "strapi-storage"
      }
    ],
    "portMappings": [
      {
        "containerPort": 1337,
        "hostPort": 1337
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/strapi",
        "awslogs-region": "eu-west-1",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "environment": [
      {
        "name": "NODE_ENV",
        "value": "development"
      },
      {
        "name": "DATABASE_CLIENT",
        "value": "mysql"
      },
      {
        "name": "DATABASE_HOST",
        "value": "${mysql_host}"
      },
      {
        "name": "DATABASE_USERNAME",
        "value": "${mysql_user}"
      },
      {
        "name": "DATABASE_PASSWORD",
        "value": "${mysql_password}"
      },
      {
        "name": "DATABASE_NAME",
        "value": "${mysql_database}"
      },
      {
        "name": "PUBLIC_KEY",
        "value": "${public_key}"
      },
      {
        "name": "FORCE_NEW_DEPLOYMENT_GUID",
        "value": "7c491ee4-58f8-4440-abdc-43fb876eb1ad"
      }
    ]
  }
]