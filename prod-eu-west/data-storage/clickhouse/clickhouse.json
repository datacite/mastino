[
  {
    "name": "clickhouse",
    "image": "clickhouse/clickhouse-server:25.12",
    "cpu": 768,
    "memory": 1256,
    "networkMode": "awsvpc",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8123,
        "hostPort": 8123
      },
      {
        "containerPort": 9000,
        "hostPort": 9000
      }
    ],
    "mountPoints": [
      {
        "containerPath": "/var/lib/clickhouse",
        "sourceVolume": "clickhouse-prod"
      },
      {
        "containerPath": "/etc/clickhouse-server/config.d",
        "sourceVolume": "clickhouse-config"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/clickhouse-prod",
        "awslogs-region": "eu-west-1",
        "awslogs-stream-prefix": "ecs"
      }
    },
    "environment": [
      {
        "name": "AWS_ACCESS_KEY_ID",
        "value": "${access_key}"
      },
      {
        "name": "AWS_SECRET_ACCESS_KEY",
        "value": "${secret_key}"
      },
      {
        "name": "AWS_REGION",
        "value": "${region}"
      },
      {
        "name": "PUBLIC_KEY",
        "value": "${public_key}"
      },
      {
        "name": "CLICKHOUSE_USER",
        "value": "datacite"
      },
      {
        "name": "CLICKHOUSE_PASSWORD",
        "value": "${clickhouse_password}"
      }
    ]
  },
  {
    "name": "clickhouse-config",
    "image": "public.ecr.aws/docker/library/bash:alpine3.16",
    "cpu": 256,
    "memory": 256,
    "entryPoint": [
      "bash",
      "-c",
      "mkdir -p /etc/clickhouse-server/config.d; chmod 777 /etc/clickhouse-server/config.d; echo ${clickhouse_config} | base64 -d - | tee /etc/clickhouse-server/config.d/config.xml"
    ],
    "mountPoints": [
      {
        "containerPath": "/etc/clickhouse-server/config.d",
        "sourceVolume": "clickhouse-config"
      }
    ],
    "privileged": false,
    "essential": false,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/clickhouse-prod",
        "awslogs-region": "eu-west-1",
        "awslogs-stream-prefix": "ecs"
      }
    }
  }
]
